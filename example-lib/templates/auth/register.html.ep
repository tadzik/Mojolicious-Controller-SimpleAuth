% layout 'default';
% title 'Register';

%= form_for '/register' => (method => 'POST') => begin
    <table><tr>
        <td>E-mail:</td>
        <td><%= text_field 'email' %></td>
    </tr><tr> 
        <td>Password:</td>
        <td><%= password_field 'password' %></td>
    </tr><tr>
        <td><%= submit_button 'Register' %></td>
    </tr></table>
%= end
